<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Items</h1>
    <ul>
        <li>
            <% if (budget.totalBudget < 1) {%>
                Please specify your budget
            <% } else { %>
                <h4>Budget: <%= budget.totalBudget %></h4>
            <% } %>

            <form action="/budgets/updateBudget" method='POST'>
                <input type="text" placeholder="<%= budget.totalBudget < 1 ? "Enter Initial Budget" : "Enter New Budget"%>" name='totalBudget'>
                <input type="submit" value="Set">
            </form>
        </li>
    <% items.forEach( el => { %> 
            <li class='item' data-id='<%=el._id%>'>
                <span> <%= el.item %></span>
                <span><%= el.itemPrice %></span>
                <span class='del'> Delete </span>
            </li>
    <% }) %>    
            <li>
                <h4>total sum: <%= sum %></h4>
                <h4 class='<%= sum > budget.totalBudget ? 'overBudget' : 'underBudget'%>'>
                    <%= sum > budget.totalBudget ? 'YOURE OVER BUDGET!!!!' : 'Remainder:'%> <%= remainder %>
                </h4>
            </li>
    </ul>

    <h2><%= user.userName %></h2>

    <form action="/items/createItem" method='POST'>
        <input type="text" placeholder="Enter Item" name='item'>
        <input type="text" placeholder="Enter Price" name='itemPrice'>
        <input type="submit">
    </form>

    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
</body>
</html>