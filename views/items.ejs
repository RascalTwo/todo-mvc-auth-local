        		<!-- Menu Section -->
<section id="gtco-menu" class="section-padding">
    <div class="container">
        <div class="section-content">
            <div class="row mb-5">
                <div class="col-md-12">
                    <div class="heading-section text-center">
                        <h2>
                            Your Budget
                        </h2>
                    </div>  
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 menu-wrap">
                </div>

                <div class="col-lg-6 menu-wrap">
                    <div class="heading-menu">
                        <% if (budget.totalBudget < 1) {%>
                            Please specify your budget
                        <% } else { %>
                            <div class="costCashTwo">
                                <h4 class='<%= sum > budget.totalBudget ? 'overBudget' : 'underBudget'%>'>
                                    Budget: $<%= budget.totalBudget %>
                                </h4>

                                <h4 class='<%= sum > budget.totalBudget ? 'overBudget' : 'underBudget'%>'><%= sum > budget.totalBudget ? `YOURE $${Math.abs(remainder)} OVER BUDGET!` : 'Remainder: $' + remainder%>
                                </h4>
                            </div>
                                
                            
                        <% } %>

                        <form action="/budgets/updateBudget" method='POST'>
                            <div class="row">
                                <div class="col-md-8 form-group">
                                    <input type="text" class="form-control" id="budget" placeholder="<%= budget.totalBudget < 1 ? "Enter Initial Budget" : "Enter New Budget"%>" name='totalBudget'>
                                </div>
                                <div class="col-md-4 text-center">
                                    <button class="btn btn-primary btn-shadow btn-lg" type="submit" name="submit">Set Budget</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <% items.forEach( el => { %> 
                        <div class="menus d-flex align-items-center" data-id='<%=el._id%>'>
                            <div class="text-wrap" style="width: 100%">
                                <div class="row align-items-start">
                                    <div class="col-8">
                                        <h4><%= el.item %></h4>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="text-muted menu-price">$<%= el.itemPrice %><span class='lnr lnr-trash'></span></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                <% }) %>
                <h4>Total Sum: $<%= sum %></h4>
                    <form method="POST" name="contact-us" action="/items/createItem">
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="item" name="item" placeholder="Item">
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="itemPrice" name="itemPrice" placeholder="Price">
                            </div>
                            <div class="col-md-12 text-center">
                                <button class="btn btn-primary btn-shadow btn-lg" type="submit" name="submit">Add Item</button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-lg-2 menu-wrap">
                </div>
            </div>
        </div>
    </div>
